{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": false,
        "lib": [
            "es6",
            "es2017",
            "dom"
        ],
        "plugins": [{
            "name": "tslint-language-service"
        }]
    },
    "moduleResolution": "node",
    "typeRoots": [
        "./node_modules/@types/"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
